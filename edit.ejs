<!--Added Header-->
<%- include('partials/header', {title: 'Edit Plan - TravelPlanner'}) %>

<!-- Edit Travel Plan Section -->
<section class="edit-section">
    <div class="container">
        <h2>Edit Travel Plan</h2>
        <!-- Sends a PUT request to update the specific plan -->
        <form action="/edit/<%= plan._id %>?_method=PUT" method="POST" class="plan-form">
            <div class="form-group">
                <label for="title">Plan Title:</label>
                <!--current plan title-->
                <input type="text" id="title" name="title" required value="<%= plan.title %>">
            </div>
            <div class="form-group">
                <label for="destination">Destination:</label>
                <!--current plan destination-->
                <input type="text" id="destination" name="destination" required value="<%= plan.destination %>">
            </div>
            <div class="form-group">
                <label for="content">Plan Details:</label>
                <!--current plan content-->
                <textarea id="content" name="content" rows="8" required><%= plan.content %></textarea>
            </div>
            <div class="form-actions">
                <button type="submit" class="btn-primary">Update Plan</button> <!-- button to submit the updated plan -->
                <a href="/" class="btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</section>

<!--Added Footer-->
<%- include('partials/footer') %>